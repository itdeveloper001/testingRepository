
@{
    ViewBag.Title = "AddProduct";
}

<h2>AddProduct</h2>

 <div class="login-page">
    <div class="container">
        <h3 class="w3ls-title w3ls-title1">Add Products</h3>
        <div class="login-body">

            @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                

                <input type="text" class="user" name="name" placeholder="Enter your Name" required="">
                <input type="text" name="price" class="lock" placeholder="Price" required="">
                <input type="file" name="Image" class="lock" placeholder="Image" required="">
                <br />
                <input type="text" name="status" class="lock" placeholder="Status" required="">
                <input type="submit" value="Add Products">


                <h1>@TempData["msg"]</h1>
            }


        </div>
        <h6>  <a href="#">View Products</a> </h6>

    </div>
</div>
